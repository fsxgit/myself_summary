/* tuis/offcanvas/offcanvas.wxss */
page,.tui {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
/*左侧导航列表  */
.tui-bottom{
  height: 100%;
  width: 75%;
  position: fixed; 
  background-color: rgb(0, 68, 97);
  z-index: 0;
}
.tui-list{
  color: white;
  padding: 30rpx 0 30rpx 40rpx;
}

/*右侧展示层  */
.tui-top{
  position: relative;
  top: 0;
  left:0;
  width: 750rpx;
  height: 100%;
  background-color: rgb(57, 125, 230);
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}

.tui-state{
  transform: rotate(0deg) scale(1) translate(75%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(75%,0%); 
}

/*右侧列表按钮  */
.tui-top .left-nav{
  position: fixed;
  width: 68rpx;
  height: 38rpx;
  left: 20rpx;
  top: 20rpx;
}

/*右侧遮罩层  */
.tui-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.5);
  z-index: 998;
}

.tui-offcanvas{
  padding: 80rpx 10px 0;
  color: #fff;
}
<script src="publicml/js/js.js"></script>
<script>
    var tt = "<?php echo $res['type'];?>";
 
function sb(){
	var goods_name = $('#goods_name').val().replace(/\s+/g,"");
    var type = $('#type option:selected').val();
	var large = $('#large').val().replace(/\s+/g,"");
	var small = $('#small').val().replace(/\s+/g,"");
	var service = $('#service').val().replace(/\s+/g,"");
	var market = $('#market').val().replace(/\s+/g,"");
	var area = $('#area').val().replace(/\s+/g,"");
	if(goods_name==""){
		alert("请输入商品名称!");
		return false;
	}if(type==""){
            alert("请选择类型!");
            return false;  
        }if(large==""){
		alert("请输入大类官费!");
		return false;
	}if(small==""){
		alert("请输入小类官费!");
		return false;
	}if(service==""){
		alert("请输入服务费!");
		return false;
	}if(market==""){
		alert("请输入市场价!");
		return false;
	}if(area==""){
		alert("请输入描述信息!");
		return false;
	}if(type==tt){
            $("#form").submit();
        }else{
            $.ajax({
                type: "POST",
                url: "index.php?g=Admin&m=Goods&a=check",
                data: {type:type},

                success: function(data){
                      if(data==1){
                          alert("该类型已经存在!");
                          return false;
                      }else{
                         $("#form").submit(); 
                      }   
                }
            });
        }	
}
</script>
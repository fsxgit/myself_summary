<admintpl file="header" />
<link rel="stylesheet" href="public/html/css/common.css"/>
<style>
a{cursor: pointer;}
.btnfx{cursor: pointer; width:60px; height:28px;line-height:28px; border:1px solid #07a9ff; color: #07a9ff; border-radius: 4px; background: none; margin-left:4px;}
</style>
<body class="J_scroll_fixed">
<div class="wrap J_check_wrap fx_pr">
	商标分类 >>

<a href="">行业分类</a>
&nbsp;<br>
&nbsp;<br>
<input type="button" class="btnfx" value="+添加分类" onclick="adds()">
&nbsp;<br>
&nbsp;<br>
    <div id="mydiv">
         <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>类别名称</th>
                <th>排序</th>
                <th>关联尼斯分类</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <foreach name="res" item="vo" key='k'>
                <tr>
                    <td>{$vo.id}</td>
                    <td>{$vo.industry_name}</td>
                    <td>{$vo.sort}</td>
                    <td>
					<foreach name="vo.cname" item="vv">
					{$vv}&nbsp;&nbsp;
					</foreach>
					</td>
                    <td>
                    <a onclick="show({$vo.id})">查看</a> || <a onclick="dels({$vo.id})">删除</a> || <a onclick="sa({$vo.id})">修改</a>
                    </td> 
                </tr>
            </foreach>
            </tbody>
        </table>
    </div>
   <div class="c-pages tc">
							<span>{$page}</span>
						</div>
</div>
</body>
</html>
<script>
function show(id){
   window.location.href='index.php?g=Admin&m=Markname&a=detail&id='+id;
}

function dels(id){
    if(confirm("是否删除?")){
        window.location.href='index.php?g=Admin&m=Markname&a=del_act&id='+id;
    }
    
}
function sa(id){
    window.location.href='index.php?g=Admin&m=Markname&a=upd_act&id='+id;
}
function adds(){
	window.location.href='index.php?g=Admin&m=Markname&a=add_lst';
}
</script>